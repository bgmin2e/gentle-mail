{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
"include": ["src/**/*.ts", "src/**/*.tsx", "background.ts", "content.ts"],
"exclude": ["node_modules", "dist"]
}
